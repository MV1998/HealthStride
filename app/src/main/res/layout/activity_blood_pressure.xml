<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".healthtopics.BloodPressure">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/WhatisBloodpressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:text="@string/what_is_blood_pressure"></TextView>

                    <TextView
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:text="@string/answer_to_blood_pressure"></TextView>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/WhatisBloodpressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <ImageView
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:layout_width="400dp"
                    android:layout_height="250dp"
                    android:src="@drawable/bloodpressure"></ImageView>

            </RelativeLayout>

        </LinearLayout>


    </ScrollView>



</RelativeLayout>